<h2 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <%= render partial:"messages/message", collection: @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_with model: @message, class:"ui reply form", url: message_path, role: "form", local: false do |form| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= form.text_field :body, placeholder: "Search users..." %>
              <%= form.button '<i class="bordered inverted orange icon edit"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>